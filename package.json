{
  "name": "peoplepets-backend",
  "version": "1.0.0",
  "description": "People Pets framework",
  "main": "src/app.ts",
  "scripts": {
    "serve": "cp -rf ./.env.example ./.env && nodemon --config nodemon.json ./src/app.ts",
    "build": "tsc && tsc-alias && cp -rf ./.env.production ./dist/.env &&  cp -rf ./package.json ./dist && cp -rf ./src/resource/locales ./dist/src/resource",
    "build:docker": "mkdir -p bin && docker-compose build && docker image save -o ./bin/peoplepets-backend.tar peoplepets-backend",
    "clean": "tsc --build --clean && sudo rm -rf ./dist && sudo rm -rf ./tmp"
  },
  "repository": "http://0.0.0.0:3000/steve/peoplepets-backend.git",
  "author": "Saeid Bahramian <bahramian.info@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@grpc/grpc-js": "^1.3.7",
    "@grpc/proto-loader": "^0.6.5",
    "axios": "^0.21.1",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "dayjs": "^1.10.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-winston": "^4.2.0",
    "http": "^0.0.1-security",
    "mongoose": "^5.13.5",
    "nanoid": "^3.1.23",
    "node-ssh": "^12.0.0",
    "nodemon": "^2.0.12",
    "tsc": "^2.0.3",
    "tsconfig-paths": "^3.11.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "i18n": "^0.13.3",
    "yup": "^0.32.9",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/config": "^0.0.39",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.4.10",
    "@types/node-ssh": "^7.0.1",
    "@types/ssh2": "^0.5.48",
    "@types/yup": "^0.29.13",
    "@types/i18n": "^0.13.1",
    "ts-node": "^10.1.0",
    "tsc-alias": "^1.4.0",
    "typescript": "^4.3.5",
    "winston-daily-rotate-file": "^4.5.5"
  }
}
